<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <meta name="color-scheme" content="dark light">
    <title>@(ViewData["Title"] ?? "Online Status") - Meercat Monitor</title>
    <link rel="icon" href="~/favicon-64.avif" />
    <style>
        :root {
          padding: 0 1em;
        }

        a {
          text-decoration: none;
        }

        .status-grid {
            display: grid;
            grid-template: "name    status  .      "
                           "history history history";
            row-gap: 1em;
            column-gap: 3em;
            justify-content: start;
            align-items: baseline;

            margin-bottom: 2em;
        }

        .status-grid > * {
            justify-self: start;
        }

        .status-grid > .target {
            grid-area: name;
        }

        .status-grid > .status {
            grid-area: status;
        }
        .status.online {
          background: green;
        }
        .status.offline {
          background:red;
        }

        .status-info {
          vertical-align: super;
        }

        .status-info:hover .time {
          opacity: 1;
          width: 200px;
        }

        .time {
            font-style: italic;
            display: inline-block;
            opacity: 0;
            width: 0;
            transition: opacity 1s, width 1s;
            overflow: hidden;
            white-space: nowrap;
        }

        .history {
            grid-area: history;

            display: flex;
            flex-wrap: wrap;
            gap: 1em 2px;
            align-items: end;
        }

        .status-container {
          display: flex;
          align-items: end;
        }

        .history .status {
            width: 1em;
            min-height: 4px;
        }

        #tooltip-overlay {
            white-space: pre;
        }
    </style>
</head>
<body>
    @RenderBody()
    <div id="tooltip-overlay" popover="hint"></div>
    <script>
        const tt = document.getElementById('tooltip-overlay')
        for (const x of document.querySelectorAll('.status[title]')){
            x.addEventListener('mouseover', ev => {
                tt.hidePopover()
                const source = ev.target
                tt.innerHTML = source.getAttribute('title')
                tt.showPopover({'source': source})
            })
            x.addEventListener('mouseout', ev => {
                tt.hidePopover()
            })
        }
    </script>
</body>
</html>
