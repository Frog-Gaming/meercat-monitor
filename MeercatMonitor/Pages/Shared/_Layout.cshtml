<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>@(ViewData["Title"] ?? "Online Status") - Meercat Monitor</title>
    <link rel="icon" href="~/favicon-64.avif" />
    <style>
        :root {
            color-scheme: light dark;
        }

        html {
            background: light-dark(#eee, #111);
            color: light-dark(#111, #ccc);
        }

        a:link {
            color: light-dark(#118, #88f);
        }

        a:focus {
            color: light-dark(#55f, #55f);
        }

        a:visited {
            color: light-dark(#33f, #77f);
        }

        .status-grid {
            display: grid;
            grid-template: "name status time ." "history history history history";
            gap: 1em;
            justify-content: start;
        }

        .status-grid > * {
            justify-self: start;
        }

        .status-grid > .target {
            grid-area: name;
        }

        .status {
            grid-area: status;
        }

        .time {
            grid-area: time;
            font-style: italic;
        }

        .history {
            grid-area: history;

            display: flex;
            flex-wrap: wrap;
        }
    </style>
</head>
<body>
    @RenderBody()
    <div id="tooltip-overlay" popover="hint"></div>
    <script>
        const tt = document.getElementById('tooltip-overlay')
        for (const x of document.querySelectorAll('.status[title]')){
            x.addEventListener('mouseover', ev => {
                tt.hidePopover()
                const source = ev.target
                tt.innerHTML = source.getAttribute('title')
                tt.showPopover({'source': source})
            })
            x.addEventListener('mouseout', ev => {
                tt.hidePopover()
            })
        }
    </script>
</body>
</html>
